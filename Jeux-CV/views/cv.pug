doctype html
html(lang='fr')
  head
    meta(charset='UTF-8')
    title CV/Nicolas-BABACI
    link(rel='icon', href='jeux/images/deco/favicon.ico')
    link(rel='stylesheet', href='jeux/css/style-cv.css', type='text/css', media='screen')
    link(rel='stylesheet', href='jeux/css/style-nav.css', type='text/css', media='screen')
  body#body
    #cv
      img(src='jeux_cv/cv/CV_BABACI_Nicolas.jpg', alt='cv')

