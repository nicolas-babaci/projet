    .LI-profile-badge(data-version='v1', data-size='medium', data-locale='fr_FR', data-type='horizontal', data-theme='dark', data-vanity='nicolas-babaci')
      a.LI-simple-link(href='https://fr.linkedin.com/in/nicolas-babaci?trk=profile-badge')

    nav#menu
      ul#nav
        li
          a(href='/', title='accueil') Accueil
        li
          a(href='jeux', title='jeux') Jeux
        li
          a(href='jeux-cv', title='jeux_cv') Jeux CV
        li#selected
          a(href='cv', title='cv') CV
        li
          a(href='jeux_cv/cv/CV_BABACI_Nicolas.pdf', download='CV_Nicolas_BABACI.pdf', title='download_cv_en_PDF') Télécharger le CV
        li
          a(href='#', onclick="parent.location='mailto:nicolas.babaci@gmail.com?'", title='envoyez_moi_un_mail') Envoyez-moi un Mail

    // Script + jQuery
    script(src='jeux_cv/src/jquery-3.3.1.min.js')
    script(src='jeux_cv/src/jquery-ui.js')
    script(src='jeux_cv/src/jquery.spasticNav.js')

    // Script barre de navigation
    script.
      $("#nav").spasticNav();

    // Script badge LinkedIn  
    script(type='text/javascript', src='https://platform.linkedin.com/badges/js/profile.js', async='', defer='')